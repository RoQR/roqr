<!-- This example requires Tailwind CSS v2.0+ -->
<nav x-data="{ showMobileMenu: false }" class="bg-gray-800">
  <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
    <div class="relative flex items-center justify-between h-16">
      <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
        <!-- Mobile menu button-->
        <button @click="showMobileMenu = !showMobileMenu" type="button" class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white" aria-controls="mobile-menu" aria-expanded="false">
          <span class="sr-only">Open main menu</span>
          <%= show_svg("menu") %>
          <%= show_svg("x") %>
        </button>
      </div>
      <div class="flex-1 flex items-center justify-center sm:items-stretch sm:justify-start">
        <div class="flex-shrink-0 flex items-center">
        <div class="text-indigo-600 mx-auto flex h-8 w-8">
          <%= show_svg("solid/bolt") %>
        </div>
        </div>
        <div class="hidden sm:block sm:ml-6">
          <div class="flex space-x-4">
            <%= render NavbarLinkComponent.new(title: 'Links', link: links_path, is_active: current_page?(links_path)) %>
            <%= render NavbarLinkComponent.new(title: 'Events', link: events_path, is_active: current_page?(events_path)) %>
          </div>
        </div>
      </div>
      <div class="absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0">
        <button type="button" class="bg-gray-800 p-1 rounded-full text-gray-400 hover:text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-white">
          <span class="sr-only">View notifications</span>
          <%= show_svg('outline/bell') %>
        </button>

        <!-- Profile dropdown -->
        <div data-controller="dropdown" class="ml-3 relative">
          <div>
            <button data-action="dropdown#toggle click@window->dropdown#hide" type="button" class="bg-gray-800 flex text-sm rounded-full focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-white" id="user-menu-button" aria-expanded="false" aria-haspopup="true">
              <span class="sr-only">Open user menu</span>
              <%= image_tag(@user.gravatar_url, alt: @user.name, class: "h-8 w-8 rounded-full") %>
            </button>
          </div>

          <div class="z-10 origin-top-right absolute right-0 mt-2 w-80 overflow-clip rounded-md shadow-lg py-1 bg-white ring-1 ring-black ring-opacity-5 focus:outline-none divide-y divide-gray-100 hidden transition" role="menu" aria-orientation="vertical" aria-labelledby="user-menu-button" tabindex="-1" data-dropdown-target="menu" data-transition-enter-active="transition ease-out duration-100" data-transition-enter-from="transform opacity-0 scale-95" data-transition-enter-to="transform opacity-100 scale-100" data-transition-leave-active="transition ease-in duration-75" data-transition-leave-from="transform opacity-100 scale-100" data-transition-leave-to="transform opacity-0 scale-95">
            <div class="py-1" role="none">
              <span class="block px-4 py-2 text-sm text-gray-700" role="none" tabindex="-1"><%= @user.email %></span>
            </div>
            <div class="py-1" role="none">
              <%= link_to "Profile", settings_profile_path, class: "block px-4 py-2 text-sm text-gray-700", role: "menuitem", tabindex: "-1", id: "user-menu-item-0" %>
              <%= link_to "Organization", settings_organization_path, class: "block px-4 py-2 text-sm text-gray-700", role: "menuitem", tabindex: "-1", id: "user-menu-item-1" %>
              <%= button_to destroy_user_session_path, method: :delete, class:"block px-4 py-2 text-sm text-gray-700 w-full text-left", role: "menuitem", tabindex: "-1", id: "user-menu-item-2" do %>
                Sign out
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Mobile menu, show/hide based on menu state. -->
  <div class="sm:hidden" id="mobile-menu" x-show="showMobileMenu" x-transition:enter="transition ease-out duration-100" x-transition:enter-start="transform opacity-0 scale-95" x-transition:enter-end="transform opacity-100 scale-100" x-transition:leave="transition ease-in duration-75" x-transition:leave-start="transform opacity-100 scale-100" x-transition:leave-end="transform opacity-0 scale-95" style="display: none">
    <div class="px-2 pt-2 pb-3 space-y-1">
      <%= render NavbarLinkComponent.new(title: 'Links', link: links_path, is_active: current_page?(links_path), is_mobile: true) %>
      <%= render NavbarLinkComponent.new(title: 'Events', link: events_path, is_active: current_page?(events_path), is_mobile: true) %>
    </div>
  </div>
</nav>
