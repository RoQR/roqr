<li>
  <div class="relative pb-8">
    <div class="relative flex space-x-3">
      <div>
        <span class="h-8 w-8 rounded-full text-white bg-slate-400 flex items-center justify-center ring-8 ring-white">
          <%= show_svg('solid/user') %>
        </span>
      </div>
      <div class="min-w-0 flex-1 pt-1.5 flex justify-between space-x-4">
        <div>
          <p class="text-sm text-slate-500"><%= notification.to_notification.message %></p>
        </div>
        <div class="text-right text-sm whitespace-nowrap text-slate-500">
          <time><%= time_ago_in_words(notification.created_at) %></time>
        </div>
      </div>
    </div>
  </div>
</li>
