<li>
  <div class="relative pb-8">
    <% unless notification_iteration.last? %>
      <span class="absolute top-4 left-4 -ml-px h-full w-0.5 bg-gray-200 dark:bg-gray-800" aria-hidden="true"></span>
    <% end %>
    <div class="relative flex space-x-3">
      <div>
        <span class="h-8 w-8 rounded-sm bg-gray-200 flex items-center justify-center ring-4 ring-gray-100 dark:ring-gray-700">
          <%= heroicon notification.to_notification.icon, variant: 'mini', class: 'h-5 w-5' %>
        </span>
      </div>
      <div class="min-w-0 flex-1 flex justify-between space-x-4">
        <div>
          <p class="text-sm text-gray-700 dark:text-gray-200"><%= sanitize notification.to_notification.message %></p>
        </div>
        <div class="text-right text-sm whitespace-nowrap text-gray-500">
          <%= local_time_ago(notification.created_at) %>
        </div>
      </div>
    </div>
  </div>
</li>
