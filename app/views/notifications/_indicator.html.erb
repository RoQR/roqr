<%= link_to notifications_path, id: "notifications-container", class: "bg-gray-900 p-1 rounded-full text-gray-400 hover:text-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-white" do %>
  <span class="relative flex">
    <span class="sr-only">View notifications</span>
    <%= heroicon 'bell' %>
    <% unless user.notifications.unread.empty? %>
      <span class="absolute top-0 right-0 inline-block w-2 h-2 transform transform-x-1/4 -transform-y-1/4 bg-red-600 rounded-full"></span>
    <% end %>
  </span>
<% end %>
