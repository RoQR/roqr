<div id="<%= dom_id public_page %>">
  <%= public_page.name %>
  <% if action_name != "show" %>
    <%= link_to "Show this public page", public_page, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this public page', edit_public_page_path(public_page), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
