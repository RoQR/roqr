<%= form_with(model: link_data) do |form| %>
  <%= form.fields_for(:links) do |link_form| %>
    <%= link_form.hidden_field :user_id, value: current_user.id %>
    <div class="mb-3">
      <%= link_form.label :name, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= link_form.text_field :name, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md", required: true %>
      </div>
    </div>
    <%= link_form.hidden_field :dynamic, value: false,  "x-bind:value": "dynamic" %>
  <% end %>
  <div class="mb-3">
    <%= form.label :ssid, "SSID", class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1 flex shadow-sm">
      <%= form.text_field :ssid, class: "focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-none rounded-r-md", required: true %>
    </div>
  </div>
  <div class="mb-3">
    <%= form.label :password, class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1 flex shadow-sm">
      <%= form.password_field :password, class: "focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-none rounded-r-md" %>
    </div>
  </div>
  <div class="mb-3 flex flex-col justify-between sm:flex-row">
    <div>
      <label class="text-base font-medium text-gray-900">Security protocol</label>
      <p class="text-sm leading-5 text-gray-500">What type of security protocol does the WiFi network use?</p>
    </div>
    <fieldset class="mt-4">
      <legend class="sr-only">Wifi security protocol</legend>
      <div class="space-y-4 sm:flex sm:items-center sm:space-y-0 sm:space-x-10">
        <div class="flex items-center">
          <%= form.radio_button :protocol, nil, class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300" %>
          <%= form.label :protocol, "None", class:"ml-3 block text-sm font-medium text-gray-700"  %>
        </div>

        <div class="flex items-center">
          <%= form.radio_button :protocol, "WEP", class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300" %>
          <%= form.label :protocol, "WEP", class:"ml-3 block text-sm font-medium text-gray-700"  %>
        </div>

        <div class="flex items-center">
          <%= form.radio_button :protocol, "WPA", class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300" %>
          <%= form.label :protocol, "WPA", class:"ml-3 block text-sm font-medium text-gray-700"  %>
        </div>
      </div>
    </fieldset>
  </div>
  <div x-data="{ hidden: false }" class="flex flex-col justify-between mb-3 sm:flex-row sm:items-center">
    <span class="flex-grow flex flex-col mb-4">
      <span class="text-sm font-medium text-gray-900" id="availability-label">Hidden</span>
      <span class="text-sm text-gray-500" id="availability-description">Is the WiFi network hidden?</span>
    </span>
    <button @click="hidden = !hidden" :class="!hidden ? 'bg-gray-200' : 'bg-indigo-600'" type="button" class="relative inline-flex flex-shrink-0 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" role="switch" aria-checked="false" aria-labelledby="availability-label" aria-describedby="availability-description">
      <span aria-hidden="true" :class="!hidden ? 'translate-x-0' : 'translate-x-5'" class="pointer-events-none inline-block h-5 w-5 rounded-full bg-white shadow transform ring-0 transition ease-in-out duration-200"></span>
    </button>
    <%= form.hidden_field :hidden, value: false,  "x-bind:value": "hidden" %>
  </div>


  <div>
    <%= form.submit class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>
