<div class="flex flex-col flex-grow border-r border-slate-200 pt-5 pb-4 overflow-y-auto">
  <div class="mt-5 flex-grow flex flex-col">
    <nav class="flex-1 px-2 space-y-1 " aria-label="Sidebar">
      <div>
        <%= link_to "Welcome", docs_welcome_path, class: "text-slate-600 hover:bg-slate-50 hover:text-slate-900 group w-full flex items-center px-2 py-2 text-sm font-medium rounded-md" %>
