<%= form_with(model: link_data) do |form| %>
  <%= render LinkFormComponent.new(form: form, user: current_user, static_only: false) %>
  <div class="mb-3">
    <%= form.label :email_address, class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1 flex shadow-sm">
      <%= form.text_field :email_address, class: "focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-none rounded-r-md" %>
    </div>
  </div>
  <div class="mb-3">
    <%= form.label :subject, class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1 flex shadow-sm">
      <%= form.text_field :subject, class: "focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-none rounded-r-md" %>
    </div>
  </div>
  <div class="mb-3">
    <%= form.label :body, class: "block text-sm font-medium text-gray-700" %>
    <div class="mt-1 flex shadow-sm">
      <%= form.text_area :body, class: "focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-none rounded-r-md" %>
    </div>
  </div>

  <div>
    <%= form.submit class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>
