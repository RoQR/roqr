<%= form_with(model: link_data) do |form| %>
  <div class="space-y-6">
    <div class="bg-white shadow px-4 py-5 sm:rounded-lg sm:p-6">
      <div class="md:grid md:grid-cols-3 md:gap-6">
        <div class="md:col-span-1">
          <h3 class="text-lg font-medium leading-6 text-gray-900">Link settings</h3>
          <p class="mt-1 text-sm text-gray-500">General settings for the link</p>
        </div>
        <div class="mt-5 md:mt-0 md:col-span-2">
          <%= render LinkFormComponent.new(form: form, user: current_user, static_only: false) %>
        </div>
      </div>
    </div>

    <div class="bg-white shadow px-4 py-5 sm:rounded-lg sm:p-6">
      <div class="md:grid md:grid-cols-3 md:gap-6">
        <div class="md:col-span-1">
          <h3 class="text-lg font-medium leading-6 text-gray-900">Link target</h3>
          <p class="mt-1 text-sm text-gray-500">Specific settings for your email link target.</p>
        </div>
        <div class="mt-5 md:mt-0 md:col-span-2">
          <div class="grid grid-cols-6 gap-6">
            <div class="col-span-12 sm:col-span-7">
              <%= form.label :email_address, class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_field :email_address, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
            </div>

            <div class="col-span-12 sm:col-span-5">
              <%= form.label :subject, class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_field :subject, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
            </div>

            <div class="col-span-12">
              <%= form.label :body, class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_area :body, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="flex justify-end">
      <%= button_to 'Cancel', new_link_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <button type="submit" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Save</button>
    </div>
  </div>
<% end %>	
