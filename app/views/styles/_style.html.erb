<%= turbo_frame_tag style do %>
  <li data-controller="qr" data-qr-barcode-data-value="https://roqr.app" class="col-span-1 flex flex-col text-center bg-gray-100 dark:bg-gray-700 rounded-sm divide-y divide-gray-200 dark:divide-gray-600">
    <div class="flex-1 flex flex-col p-8">
      <%= render 'links/hidden_qr_fields', link: style  %>
      <div data-qr-target="canvas" class="flex-shrink-0 mx-auto">
      </div>
      <h3 class="mt-6 text-gray-800 dark:text-gray-100 text-sm font-medium"><%= style.name %></h3>
    </div>
    <% if can? :edit, style %>
      <div>
        <div class="-mt-px flex divide-x divide-gray-200 dark:divide-gray-600">
          <div class="w-0 flex-1 flex">
            <%= link_to "Edit", edit_style_path(style), data: {turbo_frame: "modal"}, class: "relative -mr-px w-0 flex-1 inline-flex items-center justify-center py-4 text-sm text-gray-600 dark:text-gray-300 font-medium border border-transparent rounded-bl-sm hover:text-gray-400" %>
          </div>
          <div class="-ml-px w-0 flex-1 flex">
            <%= link_to "Delete", style_path(style), data: {turbo_method: :delete}, class: "relative -mr-px w-0 flex-1 inline-flex items-center justify-center py-4 text-sm text-gray-600 dark:text-gray-300 font-medium border border-transparent rounded-bl-sm hover:text-gray-400"  %>
          </div>
        </div>
      </div>
    <% end %>
  </li>
<% end %>
