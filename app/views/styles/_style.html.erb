<%= turbo_frame_tag style do %>
  <li class="col-span-1 flex flex-col text-center bg-gray-200 dark:bg-gray-700 rounded-lg divide-y divide-gray-400 dark:divide-gray-500">
	<div class="flex-1 flex flex-col p-8">
      <%= image_tag(qr_path(data: "https://roqr.app", fill: style.fill, color: style.color, position_border: style.position_border_color, position_core: style.position_core_color, format: :svg), class: "flex-shrink-0 mx-auto", "data-qr-target": "image") %>
	  <h3 class="mt-6 text-gray-800 dark:text-gray-100 text-sm font-medium"><%= style.name %></h3>
	</div>
	<div>
	  <div class="-mt-px flex divide-x divide-gray-300 dark:divide-gray-600">
		<div class="w-0 flex-1 flex">
          <%= link_to "Edit", edit_style_path(style), data: {turbo_frame: "modal"}, class: "relative -mr-px w-0 flex-1 inline-flex items-center justify-center py-4 text-sm text-gray-600 dark:text-gray-300 font-medium border border-transparent rounded-bl-lg hover:text-gray-400" %>
		</div>
		<div class="-ml-px w-0 flex-1 flex">
          <%= link_to "Delete", style_path(style), data: {turbo_method: :delete}, class: "relative -mr-px w-0 flex-1 inline-flex items-center justify-center py-4 text-sm text-gray-600 dark:text-gray-300 font-medium border border-transparent rounded-bl-lg hover:text-gray-400"  %>
		</div>
	  </div>
	</div>
  </li>
<% end %>
