<%= render_component 'section_header' do |c| %>
  <%= c.title { 'Styles' } %>
  <% if can? :create, Style %>
    <%= c.button(href: new_style_path, data: {turbo_frame: "modal" }).with_content("New style") %>
  <% end %>
<% end %>

<%= turbo_frame_tag Style.new %>
<%= turbo_frame_tag "styles", role: "list", class:"grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4" do %>
  <%= render 'empty_state' %>
  <%= render @styles %>
<% end %>
