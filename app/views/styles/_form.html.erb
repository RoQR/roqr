<div>
  <%= form_with(model: style) do |form| %>
    <div data-controller="qr" data-qr-barcode-data-value="https://roqr.app" class="md:grid md:grid-cols-2 md:gap-6 flex flex-col-reverse space-y-5 md:space-y-0">
      <div class="md:col-span-1">
        <div class="space-y-6">
          <div class="bg-gray-200 dark:bg-gray-700 px-4 py-5 sm:rounded-lg sm:p-6">
            <div class="">
              <div class="">
                <h3 class="text-lg font-medium leading-6 text-gray-800 dark:text-gray-100">Style settings</h3>
                <p class="mt-1 text-sm text-gray-400">Set values for a reusable style that can then be applied to your links</p>
              </div>
              <div class="mt-5 mt-0 space-y-3">
                <div>
                  <%= form.label :name, class: "block text-sm font-medium text-gray-600 dark:text-gray-300" %>
                  <div class="mt-1">
                    <%= form.text_field :name, class: "bg-gray-800 focus:bg-gray-700 border-transparent focus:border-gray-100 text-gray-800 dark:text-gray-100 block w-full sm:text-sm rounded-md", required: true %>
                  </div>
                </div>
                <div class="grid grid-cols-2 space-y-2">
                  <div class="flex flex-col">
                    <%= form.label :fill, class: "text-sm font-medium text-gray-600 dark:text-gray-300" %>
                    <%= form.color_field :fill, value: style.fill, "data-action": "input->qr#updateImage", "data-qr-target": "fill" %>
                  </div>
                  <div class="flex flex-col">
                    <%= form.label :color, class: "text-sm font-medium text-gray-600 dark:text-gray-300" %>
                    <%= form.color_field :color, value: style.color, "data-action": "input->qr#updateImage", "data-qr-target": "color" %>
                  </div>
                  <div class="flex flex-col">
                    <%= form.label :position_border_color, class: "text-sm font-medium text-gray-600 dark:text-gray-300" %>
                    <%= form.color_field :position_border_color, value: style.position_border_color, "data-action": "input->qr#updateImage", "data-qr-target": "positionBorder" %>
                  </div>
                  <div class="flex flex-col">
                    <%= form.label :position_core_color, class: "text-sm font-medium text-gray-600 dark:text-gray-300" %>
                    <%= form.color_field :position_core_color, value: style.position_core_color, "data-action": "input->qr#updateImage", "data-qr-target": "positionCore" %>
                  </div>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
      <div class="flex justify-center md:col-span-1">
        <%= image_tag(qr_path(data: "https://roqr.app", fill: style.fill, color: style.color, position_border: style.position_border_color, position_core: style.position_core_color, format: :svg), "data-qr-target": "image") %>
      </div>
    </div>
    <div class="mt-3 gap-x-3 flex justify-end">
      <button data-action="turbo-modal#hideModal" class="inline-flex items-center px-4 py-2 border border-transparent text-gray-600 dark:text-gray-300 bg-gray-600 hover:bg-gray-500 focus:ring-gray-500 text-sm font-medium rounded shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2">Cancel</button>
      <%= form.submit :Save, class: "inline-flex items-center px-4 py-2 border border-transparent text-gray-900 bg-yellow-400 hover:bg-yellow-500 focus:ring-yellow-500 text-sm font-medium rounded shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2" %>
    </div>
  <% end %>	
</div>
