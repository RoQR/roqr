<div>
  <%= form_with(model: style) do |form| %>
    <div data-controller="qr" data-qr-barcode-data-value="https://roqr.app" class="md:grid md:grid-cols-2 md:gap-6 flex flex-col-reverse space-y-5 md:space-y-0">
      <div class="md:col-span-1">
        <div class="space-y-6">
          <div class="bg-white px-4 py-5 sm:rounded-lg sm:p-6">
            <div class="">
              <div class="">
                <h3 class="text-lg font-medium leading-6 text-slate-900">Style settings</h3>
                <p class="mt-1 text-sm text-slate-500">Set values for a reusable style that can then be applied to your links</p>
              </div>
              <div class="mt-5 mt-0 space-y-3">
                <div>
                  <%= form.label :name, class: "block text-sm font-medium text-slate-700" %>
                  <div class="mt-1">
                    <%= form.text_field :name, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-slate-300 rounded-md", required: true %>
                  </div>
                </div>
                <div class="grid grid-cols-2 space-y-2">
                  <div class="flex flex-col">
                    <%= form.label :fill, class: "text-sm font-medium text-slate-900" %>
                    <%= form.color_field :fill, value: style.fill, "data-action": "input->qr#updateImage", "data-qr-target": "fill" %>
                  </div>
                  <div class="flex flex-col">
                    <%= form.label :color, class: "text-sm font-medium text-slate-900" %>
                    <%= form.color_field :color, value: style.color, "data-action": "input->qr#updateImage", "data-qr-target": "color" %>
                  </div>
                  <div class="flex flex-col">
                    <%= form.label :position_border_color, class: "text-sm font-medium text-slate-900" %>
                    <%= form.color_field :position_border_color, value: style.position_border_color, "data-action": "input->qr#updateImage", "data-qr-target": "positionBorder" %>
                  </div>
                  <div class="flex flex-col">
                    <%= form.label :position_core_color, class: "text-sm font-medium text-slate-900" %>
                    <%= form.color_field :position_core_color, value: style.position_core_color, "data-action": "input->qr#updateImage", "data-qr-target": "positionCore" %>
                  </div>
                </div>
              </div>
            </div>
          </div>

        </div>
      </div>
      <div class="flex justify-center md:col-span-1">
        <%= image_tag(qr_path(data: "https://roqr.app", fill: style.fill, color: style.color, position_border: style.position_border_color, position_core: style.position_core_color, format: :svg), "data-qr-target": "image") %>
      </div>
    </div>
    <div class="flex justify-end">
      <button data-action="turbo-modal#hideModal" class="bg-white py-2 px-4 border border-slate-300 rounded-md shadow-sm text-sm font-medium text-slate-700 hover:bg-slate-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Cancel</button>
      <%= form.submit :Save, class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  <% end %>	
</div>
