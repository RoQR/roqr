<!DOCTYPE html>
<html>
  <head>
    <%= render 'layouts/common_header' %>
  </head>

  <body>
    <div class="min-h-full">
      <%= render NavbarComponent.new(user: current_user) %>
      <header class="bg-white shadow">
        <div class="rounded-md bg-yellow-50 p-4">
          <div class="flex max-w-7xl mx-auto">
            <div class="ml-3">
              <h3 class="text-sm font-medium text-yellow-800">Roqr Alpha</h3>
              <div class="mt-2 text-sm text-yellow-700">
                <p>Roqr is in alpha-release and is undergoing extensive development.</p>
              </div>
            </div>
          </div>
        </div>
        <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
          <h1 class="text-3xl font-bold text-gray-900"><%= yield(:title) %></h1>
          <%= render_breadcrumbs builder: BreadcrumbsHelper::RoqrBreadcrumbs %>
        </div>
        <div>
        </div>
      </header>
      <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
        <% flash.each do |type, msg| %>
          <div class="py-3">
            <%= render AlertComponent.new(status: type).with_content(msg) %>
          </div>
        <% end %>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
