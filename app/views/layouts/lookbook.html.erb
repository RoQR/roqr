  <head>
    <%= render 'layouts/common_header' %>
  </head>
  <body style="padding: 20px">
    <div style="
                margin-left: auto;
                margin-right: auto;
                max-width: <%= params[:lookbook][:display][:max_width] || '100%' %>
              ">
              <%= yield %>
    </div>
  </body>
</html>
