<h2 class="mt-6 text-center text-3xl font-extrabold text-gray-100">Set your password</h2>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "mt-8 space-y-6" }) do |f| %>
  <%= f.hidden_field :reset_password_token %>
  <div class="rounded-md shadow-sm -space-y-px">
    <div>
      <%= f.label :password, class: "sr-only" %>
      <%= f.password_field :password, autocomplete: "new-password", required: true, class: "bg-gray-100 focus:bg-gray-200 dark:bg-gray-800 dark:focus:bg-gray-700 border-transparent focus:border-gray-100 text-gray-800 dark:text-gray-100 block w-full sm:text-sm rounded-t-md", placeholder: "Password" %>
    </div>
    <div>
      <%= f.label :password_confirmation, class: "sr-only" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true, class: "bg-gray-100 focus:bg-gray-200 dark:bg-gray-800 dark:focus:bg-gray-700 border-transparent focus:border-gray-100 text-gray-800 dark:text-gray-100 block w-full sm:text-sm rounded-b-md", placeholder: "Confirm password" %>
    </div>
  </div>

  <div>
    <%= f.submit "Set my password", class: "w-full inline-flex justify-center items-center border font-medium rounded shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 border-transparent text-gray-900 bg-yellow-400 hover:bg-yellow-500 focus:ring-yellow-500 px-4 py-2 text-sm" %>
  </div>
<% end %>
