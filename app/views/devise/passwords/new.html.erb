<h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">Forgot your password?</h2>
<% flash.each do |type, msg| %>
  <div class="py-3">
    <%= render AlertComponent.new(status: type).with_content(msg) %>
  </div>
<% end %>
</div>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "mt-8 space-y-6" }) do |f| %>
  <input type="hidden" name="remember" value="true">
  <div class="rounded-md shadow-sm -space-y-px">
    <div>
      <%= f.label :email, class: "sr-only" %>
      <%= f.email_field :email, autocomplete: "email", required: true, class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm", placeholder: "Email address" %>
    </div>
  </div>

  <div>
    <%= f.submit "Send me reset password instructions", class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>
