<h2 class="mt-6 text-center text-3xl font-extrabold text-gray-100">Send invitation</h2>
<%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post, class: "mt-8 space-y-6" }) do |f| %>
  <div class="rounded-md shadow-sm">
    <div class="-space-y-px">
      <div class="field">
        <%= f.text_field :name, class: "bg-gray-100 focus:bg-gray-200 dark:bg-gray-800 dark:focus:bg-gray-700 border-transparent focus:border-gray-100 text-gray-800 dark:text-gray-100 block w-full sm:text-sm rounded-t-md", placeholder: "Name" %>
      </div>

      <% resource.class.invite_key_fields.each do |field| %>
        <div class="field">
          <%= f.text_field field, class: "bg-gray-100 focus:bg-gray-200 dark:bg-gray-800 dark:focus:bg-gray-700 border-transparent focus:border-gray-100 text-gray-800 dark:text-gray-100 block w-full sm:text-sm", placeholder: field %>
        </div>
      <% end %>
      <%= f.collection_select :role, User.roles.keys, :to_s, lambda{|i| i.to_s.humanize}, {}, class: "bg-gray-100 focus:bg-gray-200 dark:bg-gray-800 dark:focus:bg-gray-700 border-transparent focus:border-gray-100 text-gray-800 dark:text-gray-100 block w-full sm:text-sm rounded-b-md" %>
    </div>

    <div class="mt-4">
    <%= f.submit "Send invitation", class: "w-full inline-flex justify-center items-center border font-medium rounded shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 border-transparent text-gray-900 bg-yellow-400 hover:bg-yellow-500 focus:ring-yellow-500 px-4 py-2 text-sm" %>
    </div>
  </div>
<% end %>
