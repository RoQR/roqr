<%= form_with(model: @user) do |form| %>
  <div class="sm:rounded-md sm:overflow-hidden">
    <div class="bg-gray-200 dark:bg-gray-700 py-6 px-4 sm:p-6">
      <div>
        <h2 class="text-lg leading-6 font-medium text-gray-800 dark:text-gray-100">Profile details</h2>
      </div>

      <div class="mt-6 grid grid-cols-12 gap-6">
        <div class="col-span-12 sm:col-span-6">
          <%= form.label :name, class: "block text-sm font-medium text-gray-600 dark:text-gray-300" %>
          <div class="mt-1">
            <%= form.text_field :name, class: "bg-gray-100 focus:bg-gray-200 dark:bg-gray-800 dark:focus:bg-gray-700 border-transparent focus:border-gray-100 text-gray-800 dark:text-gray-100 block w-full sm:text-sm rounded-md" %>
          </div>
        </div>

        <div class="col-span-12 sm:col-span-6">
          <%= form.label :email, class: "block text-sm font-medium text-gray-600 dark:text-gray-300" %>
          <div class="mt-1">
            <%= form.email_field :email, class: "bg-gray-100 focus:bg-gray-200 dark:bg-gray-800 dark:focus:bg-gray-700 border-transparent focus:border-gray-100 text-gray-800 dark:text-gray-100 block w-full sm:text-sm rounded-md" %>
          </div> 
        </div>

        <div class="col-span-12">
          <label class="block text-sm font-medium text-gray-600 dark:text-gray-300">Profile photo</label>
          <div class="mt-1 flex items-center">
            <span class="inline-block h-12 w-12 rounded-full overflow-hidden bg-gray-100">
              <%= image_tag(@user.gravatar_url) %>
            </span>
            <span class="ml-5">
              <%= link_to 'Change at gravatar.com', 'https://en.gravatar.com/emails', class: "bg-gray-200 dark:bg-gray-700 py-2 px-3 border border-gray-500 dark:border-gray-300 rounded-md shadow-sm text-sm leading-4 font-medium text-gray-600 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            </span>
          </div>
        </div>

        <div class="col-span-12 md:col-span-4">
          <fieldset class="space-y-3 mt-5">
            <legend class="text-lg font-medium text-gray-800 dark:text-gray-100">Links / styles permissions</legend>
            <div class="relative flex items-start">
              <div class="flex items-center h-5">
                <%= form.check_box :can_create_links, class: "focus:ring-gray-700 h-4 w-4 bg-gray-800 text-gray-800 rounded" %>
              </div>
              <div class="ml-3 text-sm">
                <%= form.label :can_create_links, "Create new", class: "text-gray-600 dark:text-gray-300" %>
              </div>
            </div>
            <div class="relative flex items-start">
              <div class="flex items-center h-5">
                <%= form.check_box :can_edit_links, class: "focus:ring-gray-700 h-4 w-4 bg-gray-800 text-gray-800 rounded" %>
              </div>
              <div class="ml-3 text-sm">
                <%= form.label :can_edit_links, "Edit existing", class: "text-gray-600 dark:text-gray-300" %>
              </div>
            </div>
            <div class="relative flex items-start">
              <div class="flex items-center h-5">
                <%= form.check_box :can_delete_links, class: "focus:ring-gray-700 h-4 w-4 bg-gray-800 text-gray-800 rounded" %>
              </div>
              <div class="ml-3 text-sm">
                <%= form.label :can_delete_links, "Delete existing", class: "text-gray-600 dark:text-gray-300" %>
              </div>
            </div>
          </fieldset>
        </div>
        <div class="col-span-12 md:col-span-4">
          <fieldset class="space-y-3 mt-5">
            <legend class="text-lg font-medium text-gray-800 dark:text-gray-100">Organization permissions</legend>
            <div class="relative flex items-start">
              <div class="flex items-center h-5">
                <%= form.check_box :can_edit_organization, class: "focus:ring-gray-700 h-4 w-4 bg-gray-800 text-gray-800 rounded" %>
              </div>
              <div class="ml-3 text-sm">
                <%= form.label :can_edit_organization, "Edit", class: "text-gray-600 dark:text-gray-300" %>
              </div>
            </div>
            <div class="relative flex items-start">
              <div class="flex items-center h-5">
                <%= form.check_box :can_delete_organization, class: "focus:ring-gray-700 h-4 w-4 bg-gray-800 text-gray-800 rounded" %>
              </div>
              <div class="ml-3 text-sm">
                <%= form.label :can_delete_organization, "Delete", class: "text-gray-600 dark:text-gray-300" %>
              </div>
            </div>
          </fieldset>
        </div>
        <div class="col-span-12 md:col-span-4">
          <fieldset class="space-y-3 mt-5">
            <legend class="text-lg font-medium text-gray-800 dark:text-gray-100">Team member permissions</legend>
            <div class="relative flex items-start">
              <div class="flex items-center h-5">
                <%= form.check_box :can_invite_users, class: "focus:ring-gray-700 h-4 w-4 bg-gray-800 text-gray-800 rounded" %>
              </div>
              <div class="ml-3 text-sm">
                <%= form.label :can_invite_users, "Invite members", class: "text-gray-600 dark:text-gray-300" %>
              </div>
            </div>
            <div class="relative flex items-start">
              <div class="flex items-center h-5">
                <%= form.check_box :can_edit_users, class: "focus:ring-gray-700 h-4 w-4 bg-gray-800 text-gray-800 rounded" %>
              </div>
              <div class="ml-3 text-sm">
                <%= form.label :can_edit_users, "Edit member profiles", class: "text-gray-600 dark:text-gray-300" %>
              </div>
            </div>
            <div class="relative flex items-start">
              <div class="flex items-center h-5">
                <%= form.check_box :can_delete_users, class: "focus:ring-gray-700 h-4 w-4 bg-gray-800 text-gray-800 rounded" %>
              </div>
              <div class="ml-3 text-sm">
                <%= form.label :can_delete_users, "Delete members", class: "text-gray-600 dark:text-gray-300" %>
              </div>
            </div>
          </fieldset>
        </div>
      </div>
    </div>
  </div>
  <div class="mt-3 text-right">
    <%= form.submit "Save", class: "inline-flex items-center px-4 py-2 border border-transparent text-gray-900 bg-yellow-400 hover:bg-yellow-500 focus:ring-yellow-500 text-sm font-medium rounded shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2" %>
  </div>
<% end %>
