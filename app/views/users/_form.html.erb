<%= form_for(@user, url: user_registration_path, html: {method: :put}) do |form| %>
  <%= render_component 'card' do %>
    <%= render_component 'section_header', classes: 'dark:border-gray-600' do |c| %>
      <%= c.title {'Profile details' } %>
    <% end %>

    <div class="mt-6 grid grid-cols-12 gap-6">
      <div class="col-span-12 sm:col-span-6">
        <%= form.label :name, class: "block text-sm font-medium text-gray-600 dark:text-gray-300" %>
        <div class="mt-1">
          <%= form.text_field :name, class: "bg-gray-200 focus:bg-gray-100 dark:bg-gray-800 dark:focus:bg-gray-700 border-transparent focus:border-gray-100 text-gray-800 dark:text-gray-100 block w-full sm:text-sm rounded-md" %>
        </div>
      </div>

      <div class="col-span-12 sm:col-span-6">
        <%= form.label :email, class: "block text-sm font-medium text-gray-600 dark:text-gray-300" %>
        <div class="mt-1">
          <%= form.email_field :email, class: "bg-gray-200 focus:bg-gray-100 dark:bg-gray-800 dark:focus:bg-gray-700 border-transparent focus:border-gray-100 text-gray-800 dark:text-gray-100 block w-full sm:text-sm rounded-md" %>
        </div> 
        <% if @user.pending_reconfirmation? %>
           <p class="text-sm font-medium text-gray-600 dark:text-gray-300">Currently waiting confirmation for: <%= @user.unconfirmed_email %></div>
        <% end %>
      </div>

      <div class="col-span-12">
        <label class="block text-sm font-medium text-gray-600 dark:text-gray-300">Profile photo</label>
        <div class="mt-1 flex items-center">
          <span class="inline-block h-12 w-12 rounded-full overflow-hidden bg-gray-100">
            <%= image_tag(@user.gravatar_url) %>
          </span>
          <span class="ml-5">
            <%= render_component "button", style: :secondary, href: 'https://en.gravatar.com/emails' do %>
              Change at gravatar.com
            <% end %>
          </span>
        </div>
      </div>

      <% unless @user == current_user %>
        <div class="col-span-12 sm:col-span-6">
          <div class="flex items-center">
          <%= form.label :role, class: "block text-sm font-medium text-gray-600 dark:text-gray-300" %>
          <%= render TooltipComponent.new(classes: 'mt-3') do %>
            Viewers can only view existing links and statistics. Editors can create and edit links and styles. Administrators can invite and edit users, and manage billing details.
          <% end %>
          </div>
          <div class="mt-1">
            <%= form.collection_select :role, User.roles.keys, :to_s, lambda{|i| i.to_s.humanize}, {}, class: "bg-gray-200 focus:bg-gray-100 dark:bg-gray-800 dark:focus:bg-gray-700 border-transparent focus:border-gray-100 text-gray-800 dark:text-gray-100 block w-full sm:text-sm rounded-md" %>
          </div> 
        </div>
      <% end %>
    </div>
  <% end %>
  <div class="mt-3 text-right">
    <%= form.submit "Save", class: "inline-flex items-center px-4 py-2 border border-transparent text-gray-900 bg-yellow-400 hover:bg-yellow-500 focus:ring-yellow-500 text-sm font-medium rounded shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2" %>
  </div>
<% end %>
