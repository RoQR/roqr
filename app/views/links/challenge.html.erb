<div class="flex h-screen items-center justify-center" data-turbo="false">
  <%= form_for([:try_challenge, @link]) do |f| %>
    <div class="flex flex-row">
      <%= f.password_field :password, required: true, placeholder: 'Password', class: 'bg-gray-100 focus:bg-gray-200 dark:bg-gray-700 dark:focus:bg-gray-800 border-transparent focus:border-gray-100 text-gray-800 dark:text-gray-100 block w-full sm:text-sm rounded-md' %>
      <button class='ml-3 text-gray-600' type="submit">
        <%= heroicon 'arrow-right-circle' %>
      </button>
    </div>
  <% end %>
</div>
