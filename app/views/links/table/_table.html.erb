<table class="min-w-full divide-y divide-gray-300 dark:divide-gray-500">
  <thead>
    <tr class="text-gray-800 dark:text-gray-100">
      <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold sm:pl-6">Link</th>
      <th scope="col" class="hidden px-3 py-3.5 text-left text-sm font-semibold sm:table-cell">Type</th>
      <th scope="col" align="right" class="hidden px-3 py-3.5 text-right text-sm font-semibold lg:table-cell">Scans</th>
      <th scope="col" align="right" class="px-3 py-3.5 text-right text-sm font-semibold">
        <% if @sort == 'desc' %>
          <%= link_to request.params.merge(sort: :asc), class: 'flex items-center justify-end', data: { turbo_action: :advance } do %>
            <span class="mr-1">Date</span>
            <%= heroicon 'chevron-down', variant: :mini %>
          <% end %>
        <% else %>
          <%= link_to request.params.merge(sort: :desc), class: 'flex items-center justify-end', data: { turbo_action: :advance } do %>
            <span class="mr-1">Date</span>
            <%= heroicon 'chevron-up', variant: :mini %>
          <% end %>
        <% end %>
      </th>
      <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
        <span class="sr-only">Edit</span>
      </th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <td colspan='100%'> 
        <%= paginate links, window: 2, outer_window: 2 %>
      </td>
    </tr>
  </tfoot>
  <tbody class="divide-y divide-gray-200 dark:divide-gray-600 text-gray-700 dark:text-gray-200">
    <%= render partial: "links/table/row", collection: links, as: :link %>
  </tbody>
</table>
