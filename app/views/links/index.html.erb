<% if notice %>
  <div class="row">
    <div class="col">
      <div class="alert alert-success" role="alert">
        <%= notice %>
      </div>
    </div> 
  </div>
<% end %>

<div class="row mb-3">
  <div class="col">
    <h1>Links</h1>
  </div>
</div>

<div class="row row-cols-1 row-cols-md-3 g-4 mb-3">
  <% @links.each do |link| %>
    <div class="col">
      <%= render 'link_card', link: link %>
    </div>
  <% end %>
</div>

<% if can? :create, Link %>
  <div class="row">
    <div class="col">
      <%= link_to "New link", new_link_path, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
