<%= render_component 'card' do %>
  <div class="md:grid md:grid-cols-3 md:gap-6">
    <div class="md:col-span-1">
      <h3 class="text-lg font-medium leading-6 text-gray-800 dark:text-gray-100">Link settings</h3>
    </div>
    <div data-controller="reveal" class="mt-5 md:col-span-2 md:grid md:grid-cols-3 md:gap-4">
      <div class="md:col-span-2">
        <%= form.label :name, class: "block text-sm font-medium text-gray-600 dark:text-gray-300" %>
        <div class="mt-1">
          <%= form.text_field :name, class: "bg-gray-200 focus:bg-gray-100 dark:bg-gray-800 dark:focus:bg-gray-700 border-transparent focus:border-gray-100 text-gray-800 dark:text-gray-100 block w-full sm:text-sm rounded-md", required: true %>
        </div>
      </div>
      <div class="flex justify-between flex-row items-center mt-5 md:mt-0 col-span-1">
        <% if @static_only %>
          <%= form.hidden_field :dynamic, value: false %>
        <% else %>
          <div class="flex">
            <label class="inline-flex relative items-center cursor-pointer">
              <%= form.check_box :dynamic, class: "sr-only peer", data: { action: 'reveal#toggle' } %>
              <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-gray-100 rounded-full peer dark:bg-gray-800 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-yellow-300"></div>
              <span class="ml-3 text-sm font-medium text-gray-600 dark:text-gray-300">Dynamic?</span>
            </label>
            <%= render TooltipComponent.new do %>
              Dynamic links can be updated, and track scans.
            <% end %>
          </div>
        <% end %>
      </div>
      <%= content_tag :div, class: class_names('mt-3 col-span-2 flex flex-col gap-y-4', { hidden: @static_only || !form.object.dynamic }), data: { reveal_target: 'item' } do %>
        <% if @link.persisted? %>
          <%= render 'links/custom_domain/value' %>
        <% else %>
          <%= render 'links/custom_domain/field' %>
        <% end %>
        <turbo-frame id="pw">
          <% if form.object.password_digest %>
            <%= render 'links/password/remove_password_link' %>
          <% else %>
            <%= render 'links/password/password_field', form: form %>
          <% end %>
        </turbo-frame>
      <% end %>
    </div>
  </div>
<% end %>
