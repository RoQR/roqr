<%= render_component 'card' do %>
  <%= form.fields_for :email_link, @link.link_data || EmailLink.new do |email_form| %>
    <div class="md:grid md:grid-cols-3 md:gap-6">
      <div class="md:col-span-1">
        <h3 class="text-lg font-medium leading-6 text-gray-800 dark:text-gray-100">Link target</h3>
      </div>
      <div class="mt-5 md:mt-0 md:col-span-2">
        <div class="grid grid-cols-6 gap-6">
          <div class="col-span-12 sm:col-span-7">
            <%= email_form.label :email_address, class: "block text-sm font-medium text-gray-600 dark:text-gray-300" %>
            <div class="mt-1">
              <%= email_form.email_field :email_address, class: "bg-gray-100 focus:bg-gray-200 dark:bg-gray-800 dark:focus:bg-gray-700 border-transparent focus:border-gray-100 text-gray-800 dark:text-gray-100 block w-full sm:text-sm rounded-md" %>
            </div>
          </div>

          <div class="col-span-12 sm:col-span-5">
            <%= email_form.label :subject, class: "block text-sm font-medium text-gray-600 dark:text-gray-300" %>
            <div class="mt-1">
              <%= email_form.text_field :subject, class: "bg-gray-100 focus:bg-gray-200 dark:bg-gray-800 dark:focus:bg-gray-700 border-transparent focus:border-gray-100 text-gray-800 dark:text-gray-100 block w-full sm:text-sm rounded-md" %>
            </div>
          </div>

          <div class="col-span-12">
            <%= email_form.label :body, class: "block text-sm font-medium text-gray-600 dark:text-gray-300" %>
            <div class="mt-1">
              <%= email_form.text_area :body, class: "bg-gray-100 focus:bg-gray-200 dark:bg-gray-800 dark:focus:bg-gray-700 border-transparent focus:border-gray-100 text-gray-800 dark:text-gray-100 block w-full sm:text-sm rounded-md" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>	
<% end %>
