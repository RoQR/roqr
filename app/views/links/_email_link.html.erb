<%= render_component 'card' do %>
  <%= form.simple_fields_for :email_link, @link.link_data || EmailLink.new do |email_form| %>
    <div class="md:grid md:grid-cols-3 md:gap-6">
      <div class="md:col-span-1">
        <h3 class="text-lg font-medium leading-6 text-gray-800 dark:text-gray-100">Link target</h3>
      </div>
      <div class="mt-5 md:mt-0 md:col-span-2">
        <div class="grid grid-cols-6 gap-6">
          <div class="col-span-12 sm:col-span-7">
            <%= email_form.input :email_address %>
          </div>

          <div class="col-span-12 sm:col-span-5">
              <%= email_form.input :subject %>
          </div>

          <div class="col-span-12">
            <%= email_form.input :body, as: :text %>
          </div>
        </div>
      </div>
    </div>
  <% end %>	
<% end %>
