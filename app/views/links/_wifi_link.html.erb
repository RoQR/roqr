<%= render_component 'card' do %>
  <%= form.simple_fields_for :wifi_link, @link.link_data || WifiLink.new do |wifi_form| %>
    <div class="md:grid md:grid-cols-3 md:gap-6">
      <div class="md:col-span-1">
        <h3 class="text-lg font-medium leading-6 text-gray-800 dark:text-gray-100">Link target</h3>
      </div>
      <div class="mt-5 md:mt-0 md:col-span-2">
        <div class="grid grid-cols-6 gap-6">
          <div class="col-span-4">
            <%= wifi_form.input :ssid, label: 'Network name', hint: 'Sometimes referred to as an SSID', required: true %>
          </div>

          <div class="col-span-3">
            <%= wifi_form.input :password %>
          </div>

          <div class="col-span-4">
            <%= wifi_form.input :protocol, collection: [['None', nil], ['WEP', 'WEP'], ['WPA', 'WPA']],  label: 'Security protocol', include_blank: false, hint: 'Most WiFi networks have some form of protection through a security protocol. The most common form of security protocol is WEP, but WPA is also becoming more popular. To find out your settings, check your network settings through a device that is already connected to the network.' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
