<%= render_component 'card' do %>
  <div class="md:grid md:grid-cols-3 md:gap-6">
    <div class="md:col-span-1">
      <h3 class="text-lg font-medium leading-6 text-gray-800 dark:text-gray-100">Style</h3>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Customize the look of your link</p>
    </div>
    <div class="md:col-span-2 md:grid-cols-3 md:gap-6">
      <div class="mt-5" data-controller="style">
        <div class="flex flex-col">
          <%= form.label :style, "Choose from an existing style", class: "text-sm font-medium text-gray-600 dark:text-gray-300" %>
          <div class="mt-1">
            <%= form.select :style, options_for_select(@styles.map{|t| [t.name, t.id]}),  {include_blank: :true}, {data: {action: "style#apply"}, class: "bg-gray-100 focus:bg-gray-200 dark:bg-gray-800 dark:focus:bg-gray-700 border-transparent focus:border-gray-100 text-gray-800 dark:text-gray-100 block w-full sm:text-sm rounded-md"} %>
          </div>
        </div>
        <%= turbo_frame_tag Style.new do %>
          <span class="text-sm font-medium text-gray-600 dark:text-gray-300">
            or
            <%= link_to "create a new style", new_style_path, class: "text-yellow-600 dark:text-yellow-400", data: {turbo_frame: "modal"} %>
          </span>
        <% end %>
        <fieldset hidden>
          <div class="grid mt-2 grid-cols-2 space-y-2">
            <div class="flex flex-col">
              <%= form.color_field :background_color, value: link.background_color, "data-style-target": "backgroundColor" %>
            </div>
            <div class="flex flex-col">
              <%= form.color_field :dots_color, value: link.dots_color, "data-style-target": "dotsColor" %>
            </div>
            <div class="flex flex-col">
              <%= form.color_field :corner_squares_color, value: link.corner_squares_color, "data-style-target": "cornerSquaresColor" %>
            </div>
            <div class="flex flex-col">
              <%= form.color_field :corner_dots_color, value: link.corner_dots_color, "data-style-target": "cornerDotsColor" %>
            </div>
          </div>
        </fieldset>
      </div>
    </div>
  </div>
<% end %>
