<div class="bg-white shadow px-4 py-5 rounded-lg sm:p-6">
  <div class="md:grid md:grid-cols-3 md:gap-6">
    <div class="md:col-span-1">
      <h3 class="text-lg font-medium leading-6 text-gray-900">Style</h3>
      <p class="mt-1 text-sm text-gray-500">Customize the look of your link</p>
    </div>
    <div class="md:col-span-2 md:grid-cols-3 md:gap-6">
      <div class="mt-5" data-controller="style">
        <div class="flex flex-col">
          <%= form.label :style, class: "text-sm font-medium text-gray-700" %>
          <%= form.select :style, options_for_select(@styles.map{|t| [t.name, t.id]}),  {include_blank: :true}, {data: {action: "style#apply"}, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md"} %>
        </div>
        <div class="grid mt-2 grid-cols-2 space-y-2">
          <div class="flex flex-col">
            <%= form.label :fill, class: "text-sm font-medium text-gray-900" %>
            <%= form.color_field :fill, value: link.fill, "data-style-target": "fill" %>
          </div>
          <div class="flex flex-col">
            <%= form.label :color, class: "text-sm font-medium text-gray-900" %>
            <%= form.color_field :color, value: link.color, "data-style-target": "color" %>
          </div>
          <div class="flex flex-col">
            <%= form.label :position_border_color, class: "text-sm font-medium text-gray-900" %>
            <%= form.color_field :position_border_color, value: link.position_border_color, "data-style-target": "positionBorder" %>
          </div>
          <div class="flex flex-col">
            <%= form.label :position_core_color, class: "text-sm font-medium text-gray-900" %>
            <%= form.color_field :position_core_color, value: link.position_core_color, "data-style-target": "positionCore" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
