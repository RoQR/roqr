<%= form.fields_for :url_link, @link.link_data || UrlLink.new do |url_form| %>
  <div class="bg-white shadow px-4 py-5 sm:rounded-lg sm:p-6">
    <div class="md:grid md:grid-cols-3 md:gap-6">
      <div class="md:col-span-1">
        <h3 class="text-lg font-medium leading-6 text-slate-900">Link target</h3>
      </div>
      <div class="mt-5 md:mt-0 md:col-span-2">
        <div class="grid grid-cols-6 gap-6">
          <div class="col-span-12 sm:col-span-5 lg:col-span-3">
            <%= url_form.label :url, "URL", class: "block text-sm font-medium text-slate-700" %>
            <%= url_form.url_field :url, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-slate-300 rounded-md", placeholder: "https://" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
