<%= form.fields_for :url_link, @link.link_data || UrlLink.new do |url_form| %>
  <div class="bg-gray-700 shadow px-4 py-5 rounded-lg sm:p-6">
    <div class="md:grid md:grid-cols-3 md:gap-6">
      <div class="md:col-span-1">
        <h3 class="text-lg font-medium leading-6 text-gray-100">Link target</h3>
      </div>
      <div class="mt-5 md:mt-0 md:col-span-2">
        <div class="grid grid-cols-6 gap-6">
          <div class="col-span-12 sm:col-span-5 lg:col-span-3">
            <%= url_form.label :url, "URL", class: "block text-sm font-medium text-gray-300" %>
            <div class="mt-1">
              <%= url_form.url_field :url, class: "bg-gray-800 focus:bg-gray-700 border-transparent focus:border-gray-100 text-gray-100 block w-full sm:text-sm rounded-md", placeholder: "https://" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
