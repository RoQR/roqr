<%= render_component 'card' do %>
  <%= form_with(model: @qr, url: wizard_path, method: :put) do |f| %>
      <div class="mt-5 md:mt-0 md:col-span-2">
        <div class="grid grid-cols-6 gap-6">
          <div class="col-span-3 sm:col-span-2">
            <%= f.label :first_name, class: "block text-sm font-medium text-gray-600 dark:text-gray-300" %>
            <div class="mt-1">
              <%= f.text_field :first_name, class: "bg-gray-200 focus:bg-gray-100 dark:bg-gray-800 dark:focus:bg-gray-700 border-transparent focus:border-gray-100 text-gray-800 dark:text-gray-100 block w-full sm:text-sm rounded-md" %>
            </div>
          </div>

          <div class="col-span-3 sm:col-span-2">
            <%= f.label :last_name, class: "block text-sm font-medium text-gray-600 dark:text-gray-300" %>
            <div class="mt-1">
              <%= f.text_field :last_name, class: "bg-gray-200 focus:bg-gray-100 dark:bg-gray-800 dark:focus:bg-gray-700 border-transparent focus:border-gray-100 text-gray-800 dark:text-gray-100 block w-full sm:text-sm rounded-md" %>
            </div>
          </div>

          <div class="col-span-3 sm:col-span-2">
            <%= f.label :email, class: "block text-sm font-medium text-gray-600 dark:text-gray-300" %>
            <div class="mt-1">
              <%= f.email_field :email, class: "bg-gray-200 focus:bg-gray-100 dark:bg-gray-800 dark:focus:bg-gray-700 border-transparent focus:border-gray-100 text-gray-800 dark:text-gray-100 block w-full sm:text-sm rounded-md" %>
            </div>
          </div>

          <div class="col-span-3 sm:col-span-2">
            <%= f.label :phone, class: "block text-sm font-medium text-gray-600 dark:text-gray-300" %>
            <div class="mt-1">
              <%= f.phone_field :phone, class: "bg-gray-200 focus:bg-gray-100 dark:bg-gray-800 dark:focus:bg-gray-700 border-transparent focus:border-gray-100 text-gray-800 dark:text-gray-100 block w-full sm:text-sm rounded-md" %>
            </div>
          </div>

          <div class="col-span-3 sm:col-span-2">
            <%= f.label :birthday, class: "block text-sm font-medium text-gray-600 dark:text-gray-300" %>
            <div class="mt-1">
              <%= f.date_field :birthday, class: "bg-gray-200 focus:bg-gray-100 dark:bg-gray-800 dark:focus:bg-gray-700 border-transparent focus:border-gray-100 text-gray-800 dark:text-gray-100 block w-full sm:text-sm rounded-md" %>
            </div>
          </div>

          <div class="col-span-4 sm:col-span-3">
            <%= f.label :website, class: "block text-sm font-medium text-gray-600 dark:text-gray-300" %>
            <div class="mt-1">
              <%= f.url_field :website, class: "bg-gray-200 focus:bg-gray-100 dark:bg-gray-800 dark:focus:bg-gray-700 border-transparent focus:border-gray-100 text-gray-800 dark:text-gray-100 block w-full sm:text-sm rounded-md" %>
            </div>
          </div>

          <div class="col-span-6 sm:col-span-6">
            <%= f.label :address, class: "block text-sm font-medium text-gray-600 dark:text-gray-300" %>
            <div class="mt-1">
              <%= f.text_area :address, class: "bg-gray-200 focus:bg-gray-100 dark:bg-gray-800 dark:focus:bg-gray-700 border-transparent focus:border-gray-100 text-gray-800 dark:text-gray-100 block w-full sm:text-sm rounded-md" %>
            </div>
          </div>

          <div class="col-span-3 sm:col-span-3">
            <%= f.label :company, class: "block text-sm font-medium text-gray-600 dark:text-gray-300" %>
            <div class="mt-1">
              <%= f.text_field :company, class: "bg-gray-200 focus:bg-gray-100 dark:bg-gray-800 dark:focus:bg-gray-700 border-transparent focus:border-gray-100 text-gray-800 dark:text-gray-100 block w-full sm:text-sm rounded-md" %>
            </div>
          </div>

          <div class="col-span-3 sm:col-span-3">
            <%= f.label :title, class: "block text-sm font-medium text-gray-600 dark:text-gray-300" %>
            <div class="mt-1">
              <%= f.text_field :title, class: "bg-gray-200 focus:bg-gray-100 dark:bg-gray-800 dark:focus:bg-gray-700 border-transparent focus:border-gray-100 text-gray-800 dark:text-gray-100 block w-full sm:text-sm rounded-md" %>
            </div>
          </div>

          <div class="col-span-6 sm:col-span-6">
            <%= f.label :note, class: "block text-sm font-medium text-gray-600 dark:text-gray-300" %>
            <div class="mt-1">
              <%= f.text_area :note, class: "bg-gray-200 focus:bg-gray-100 dark:bg-gray-800 dark:focus:bg-gray-700 border-transparent focus:border-gray-100 text-gray-800 dark:text-gray-100 block w-full sm:text-sm rounded-md" %>
            </div>
          </div>
        </div>
      </div>
      <%= render_component 'button', type: :submit, classes: 'mt-3' do %>
        Continue
      <% end %>
    <% end %>	
  <% end %>
