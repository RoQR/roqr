<%= render_component 'card' do %>
  <%= form_with(model: @qr, url: wizard_path, method: :put) do |f| %>
    <div class="mt-5 md:mt-0 md:col-span-2">
      <div class="grid grid-cols-6 gap-6">
        <div class="col-span-12 sm:col-span-5 lg:col-span-3">
          <%= f.label :number, class: "block text-sm font-medium text-gray-600 dark:text-gray-300" %>
          <div class="mt-1">
            <%= f.phone_field :number, class: "bg-gray-200 focus:bg-gray-100 dark:bg-gray-800 dark:focus:bg-gray-700 border-transparent focus:border-gray-100 text-gray-800 dark:text-gray-100 block w-full sm:text-sm rounded-md", required: true %>
          </div>
        </div>
      </div>
    </div>
    <%= render_component 'button', type: :submit, classes: 'mt-3' do %>
      Continue
    <% end %>
  <% end %>
<% end %>
