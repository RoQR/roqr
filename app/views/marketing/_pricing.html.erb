<div id="Pricing" class="relative bg-slate-800 py-16 sm:py-24 lg:py-32">
  <div class="mx-auto max-w-md px-4 text-center sm:max-w-3xl sm:px-6 lg:max-w-7xl lg:px-8">
    <h2 class="mt-2 text-3xl font-extrabold tracking-tight text-white sm:tet-4xl">Simple, volume-based pricing</h2>
    <p class="text-base text-slate-400">Try it risk-free with a 3 month free trial. No credit card needed.</p>
    <div data-controller="price-slider" class="mt-3 bg-white shadow-lg px-10 py-6 rounded-lg">
      <div class="flex justify-between text-left">
        <div class="flex flex-col">
          <p class="text-sm uppercase text-slate-400 tracking-wide">Monthly scans</p>
          <p data-price-slider-target="volume" class="font-bold text-2xl">1k</p>
        </div>
        <div class="flex flex-col text-right">
          <p class="text-sm uppercase text-slate-400 tracking-wide">Your price</p>
          <p class="font-bold text-2xl">$<span data-price-slider-target="price">9</span> / mo</p>
        </div>
      </div>
      <div class="mt-4">
        <input data-price-slider-target="slider" data-action="price-slider#updatePrice" type="range" name="volume" value="0" min="0" max="7" class="w-full h-1 rounded-full bg-indigo-500 appearance-none"/>
      </div>
      <div class="mt-4 relative">
        <div class="absolute inset-0 flex items-center" aria-hidden="true">
          <div class="w-full border-t border-slate-300"></div>
        </div>
        <div class="relative flex justify-start">
          <span class="pr-2 bg-white text-sm text-slate-500"> Always included </span>
        </div>
      </div>
      <div class="mt-4 sm:grid sm:grid-cols-3 sm:gap-4 space-y-3 sm:space-y-0 text-left">
        <div class="flex flex-row items-center">
          <div class="text-indigo-500 mr-3">
            <%= show_svg('solid/check') %>
          </div>
          Unlimited QR codes
        </div>
        <div class="flex flex-row items-center">
          <div class="text-indigo-500 mr-3">
            <%= show_svg('solid/check') %>
          </div>
          Insights and analytics
        </div>
        <div class="flex flex-row items-center">
          <div class="text-indigo-500 mr-3">
            <%= show_svg('solid/check') %>
          </div>
          Unlimited team members
        </div>
        <div class="flex flex-row items-center">
          <div class="text-indigo-500 mr-3">
            <%= show_svg('solid/check') %>
          </div>
          Unlimited data retention
        </div>
        <div class="flex flex-row items-center">
          <div class="text-indigo-500 mr-3">
            <%= show_svg('solid/check') %>
          </div>
          100% data ownership
        </div>
        <div class="flex flex-row items-center">
          <div class="text-indigo-500 mr-3">
            <%= show_svg('solid/check') %>
          </div>
          Webhook and API access
        </div>
      </div>
    </div>
  </div>
</div>
