<% if @events.empty? %>
  <div class="text-center">
    <h3 class="mt-2 text-sm font-medium text-gray-900">No events</h3>
    <p class="mt-1 text-sm text-gray-500">Share your QR codes to start generating events.</p>
  </div>
<% else %>
<%= render SectionHeaderComponent.new do |c| %>
  <%= c.with_title do %>
    Events
  <% end %>
  <%= c.with_button(style: :white, link: events_path(format: :csv)) do %>
    <span class="flex">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10" />
      </svg>
      <p class="ml-2">Download as CSV</p>
    </span>
    <% end %>
<% end %>
<div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 rounded-md md:rounded-lg overflow-x-auto">
  <table class="min-w-full divide-y divide-gray-300">
    <thead class="bg-gray-50">
      <tr>
        <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Datetime</th>
        <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Link</th>
        <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">IP Address</th>
        <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Browser name</th>
        <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Browser version</th>
        <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Bot name</th>
        <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Device name</th>
        <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Platform name</th>
        <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Platform version</th>
        <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Language</th>
        <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">City</th>
        <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Country</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200 bg-white">
      <% @events.sort_by {|e| e.created_at }.reverse.each do |event| %>
        <tr>
          <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6"><%= event.created_at.to_fs(:db) %></td>
          <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= event.link.name %></td>
          <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= event.ip %></td>
          <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= event.browser_name %></td>
          <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= event.browser_version %></td>
          <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= event.bot_name %></td>
          <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= event.device_name %></td>
          <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= event.platform_name %></td>
          <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= event.platform_version %></td>
          <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= event.language %></td>
          <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= event.city %></td>
          <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= event.country %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<% end %>
