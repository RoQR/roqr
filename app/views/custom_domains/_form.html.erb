<%= form_with(model: [@organization, @custom_domain], class: "contents") do |form| %>
  <div class="grid grid-cols-6 gap-6">
    <div class="col-span-12 sm:col-span-5 lg:col-span-3">
      <%= form.label :url, "URL", class: "block text-sm font-medium text-gray-600 dark:text-gray-300" %>
      <div class="mt-1">
        <%= form.url_field :url, class: "bg-gray-200 focus:bg-gray-100 dark:bg-gray-800 dark:focus:bg-gray-700 border-transparent focus:border-gray-100 text-gray-800 dark:text-gray-100 block w-full sm:text-sm rounded-md", placeholder: "e.g. https://qr.yourdomain.com" %>
      </div>
    </div>
  </div>
  <div class="mt-3">
    <%= render_component 'button', type: :submit do %>
      Submit
    <% end %>
  </div>
<% end %>
