<% content_for(:title, 'Select plan') %>
<!-- This example requires Tailwind CSS v2.0+ -->

<!-- Tiers -->
<div class="mt-24 space-y-12 lg:space-y-0 lg:grid lg:grid-cols-3 lg:gap-x-8">
  <div class="relative p-8 bg-white border border-slate-200 rounded-2xl shadow-sm flex flex-col">
    <div class="flex-1">
      <h3 class="text-xl font-semibold text-slate-900">One Hit Wonder</h3>
      <p class="mt-4 flex items-baseline text-slate-900">
      <span class="text-5xl font-extrabold tracking-tight">$5</span>
      <span class="ml-1 text-xl font-semibold">/month</span>
      </p>
      <p class="mt-6 text-slate-500">One dynamic QR code, with unlimited scans.</p>

      <!-- Feature list -->
      <ul role="list" class="mt-6 space-y-6">
        <li class="flex">
          <div class="flex-shrink-0 text-indigo-500">
            <%= show_svg('outline/check') %>
          </div>
          <span class="ml-3 text-slate-500">1 dynamic link</span>
        </li>

        <li class="flex">
          <div class="flex-shrink-0 text-indigo-500">
            <%= show_svg('outline/check') %>
          </div>
          <span class="ml-3 text-slate-500">Up to 1,000 subscribers</span>
        </li>

