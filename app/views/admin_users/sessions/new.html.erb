<h2 class="mt-6 text-center text-3xl font-extrabold text-gray-100">Sign in to your account</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-8 space-y-6" }) do |f| %>
  <div class="rounded-md shadow-sm">
    <div>
      <%= f.label :email, class: "sr-only" %>
      <%= f.email_field :email, autocomplete: "email", required: true, class: "bg-gray-100 focus:bg-gray-200 dark:bg-gray-800 dark:focus:bg-gray-700 border-transparent focus:border-gray-100 text-gray-800 dark:text-gray-100 block w-full sm:text-sm rounded-t-md", placeholder: "Email address" %>
    </div>
    <div>
      <%= f.label :password, class: "sr-only" %>
      <%= f.password_field :password, autocomplete: "current-password", required: true, class: "bg-gray-100 focus:bg-gray-200 dark:bg-gray-800 dark:focus:bg-gray-700 border-transparent focus:border-gray-100 text-gray-800 dark:text-gray-100 block w-full sm:text-sm rounded-b-md", placeholder: "Password" %>
    </div>
  </div>

  <div>
    <%= f.submit "Sign in", class: "w-full inline-flex justify-center items-center border font-medium rounded shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 border-transparent text-gray-900 bg-yellow-400 hover:bg-yellow-500 focus:ring-yellow-500 px-4 py-2 text-sm" %>
  </div>
<% end %>
