<div class="flex flex-col items-center">
  <h3 class="mb-3 text-lg text-gray-800 dark:text-gray-100">Next payment</h3>
  <div class="mb-3 rounded border border-gray-200 dark:border-gray-700">
    <table class="w-96">
      <thead class="border-b border-gray-200 dark:border-gray-700">
        <td class="text-gray-600 dark:text-gray-300 px-5 py-3" align="right">Amount</td>
        <td class="text-gray-600 dark:text-gray-300 px-5 py-3" align="right">Date</td>
      </thead>
      <tr>
        <td class="text-gray-700 dark:text-gray-200 px-5 py-3" align="right"><%= number_to_currency preview[:next_payment][:amount] %>
        <td class="text-gray-700 dark:text-gray-200 px-5 py-3" align="right"><%= preview[:next_payment][:date] %>
      </tr>
    </table>
  </div>
  <div class="mt-5 sm:mt-4 sm:flex sm:flex-row-reverse">
    <%= form_for @subscription do |f| %>
      <%= f.hidden_field :plan_id, value: @preview[:plan_id] %>
      <%= f.submit class: "w-full inline-flex justify-center rounded-md border border-transparent px-4 py-2 bg-yellow-300 text-base font-medium text-gray-900 hover:bg-yellow-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-200 sm:ml-3 sm:w-auto sm:text-sm" do %>
        Confirm
      <% end %>
    <% end %>
    <button type="button" class="mt-3 w-full inline-flex justify-center rounded-md border border-transparent px-4 py-2 bg-gray-300 dark:bg-gray-600 text-base font-medium text-gray-600 dark:text-gray-300 hover:bg-gray-400 dark:hover:bg-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 sm:mt-0 sm:w-auto sm:text-sm" data-action="turbo-modal#hideModal">Cancel</button>
  </div>
</div>
