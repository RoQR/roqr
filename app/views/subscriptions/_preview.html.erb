<div class="flex flex-col items-center">
  <h3 class="mb-3 text-lg text-gray-800 dark:text-gray-100">Immediate payment</h3>
  <div class="mb-3 rounded border border-gray-200 dark:border-gray-700">
    <table class="w-96">
      <thead class="border-b border-gray-200 dark:border-gray-700">
        <td class="text-gray-600 dark:text-gray-300 px-5 py-3" align="right">Amount</td>
        <td class="text-gray-600 dark:text-gray-300 px-5 py-3" align="right">Date</td>
      </thead>
      <tr>
        <td class="text-gray-700 dark:text-gray-200 px-5 py-3" align="right"><%= number_to_currency preview[:immediate_payment][:amount] %>
        <td class="text-gray-700 dark:text-gray-200 px-5 py-3" align="right"><%= preview[:immediate_payment][:date] %>
      </tr>
    </table>
  </div>
  <h3 class="my-3 text-lg text-gray-800 dark:text-gray-100">Next payment</h3>
  <div class="mb-3 rounded border border-gray-200 dark:border-gray-700">
    <table class="w-96">
      <thead class="border-b border-gray-200 dark:border-gray-700">
        <td class="text-gray-600 dark:text-gray-300 px-5 py-3" align="right">Amount</td>
        <td class="text-gray-600 dark:text-gray-300 px-5 py-3" align="right">Date</td>
      </thead>
      <tr>
        <td class="text-gray-700 dark:text-gray-200 px-5 py-3" align="right"><%= number_to_currency preview[:next_payment][:amount] %>
        <td class="text-gray-700 dark:text-gray-200 px-5 py-3" align="right"><%= preview[:next_payment][:date] %>
      </tr>
    </table>
  </div>
  <div class="mt-5 sm:mt-4 sm:flex sm:flex-row-reverse">
    <%= form_for @subscription do |f| %>
      <%= f.hidden_field :plan_id, value: @preview[:plan_id] %>
      <%= render_component :button, type: :submit do %>
        Confirm
      <% end %>
    <% end %>
    <%= render_component :button, style: :secondary, data: { action: 'turbo-modal#hideModal' } do %>
      Cancel
    <% end %>
  </div>
</div>
