<%= form_with(model: template, class: "contents") do |form| %>
  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5" >
    <%= form.label :fill %>
    <%= form.color_field :fill, value: template.fill %>
  </div>
  <div class="my-5">
    <%= form.label :color %>
    <%= form.color_field :color, value: template.color %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
