<%= paginator.render do %>
  <nav class="border-t border-gray-200 px-4 py-3.5 flex items-center justify-between sm:px-0">
    <div class="-mt-px w-0 flex-1 flex">
      <%= prev_page_tag %>
    </div>
    <div class="hidden md:-mt-px md:flex">
     <% each_page do |page| %>
       <% if page.display_tag? %>
         <%= page_tag page %>
       <% elsif !page.was_truncated? %>
         <%= gap_tag %>
       <% end %>
     <% end %>
    </div>
    <div class="-mt-px w-0 flex-1 flex justify-end">
      <%= next_page_tag %>
    </div>
  </nav>
<% end %>
