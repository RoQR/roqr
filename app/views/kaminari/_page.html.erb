<% if page.current? %>
  <span class="text-yellow-300 px-4 inline-flex items-center text-sm font-medium" aria-current="page"><%= page %></span>
<% else %>
  <%= link_to page, url, class: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 border-t-2 px-4 inline-flex items-center text-sm font-medium" %>
<% end %>
